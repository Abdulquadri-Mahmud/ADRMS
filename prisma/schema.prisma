generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Record {
  id            Int      @id @default(autoincrement())
  serialNumber  Int
  receiptNumber String   @unique
  name          String
  amount        Float
  date          DateTime
  description   String?
  type          String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([name])
}
